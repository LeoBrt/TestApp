<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectScreenActivity">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="171dp"
            android:src="@drawable/foto1"
            />

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageView3"
            android:layout_marginEnd="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="171dp"
            android:src="@drawable/prof_4"
            />

    <ImageView
            android:layout_width="90dp"
            android:layout_height="87dp"
            app:srcCompat="@drawable/ic_coffee_cup"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="147dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="147dp"
            />

    <ImageView
            android:layout_width="71dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/ic_arrow_forward_big"
            android:id="@+id/continue_arrow"
            android:layout_marginEnd="157dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="157dp"
            android:layout_marginBottom="59dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Spinner
            android:id="@+id/mySpinner"
            android:layout_width="138dp"
            android:spinnerMode="dialog"
            android:layout_height="55dp"
            android:layout_marginEnd="123dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="123dp"
            android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toTopOf="@+id/continue_arrow"
            app:layout_constraintHorizontal_bias="0.6"/>


</android.support.constraint.ConstraintLayout>