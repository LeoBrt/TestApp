<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScreenActivity"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

    <ImageView
            android:src="@drawable/ic_coffee_cup"
            android:layout_height="221dp"
            android:id="@+id/imageView"
            android:layout_width="221dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:contentDescription="@string/coffeecup"
            android:layout_marginTop="75dp"
            android:padding="30dp"
            android:background="@drawable/circle_background"
            />


    <TextView
            android:text="@string/splashScreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/roboto_thin"
            android:textSize="25sp"
            android:textColor="#ED8142"
            android:background="@color/colorBox"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>